#%Module0.4.1#####################################################################
## pytorch modulefile
##
proc ModulesHelp { } {
global version

puts stderr "\n\tThis module adds fairseq 0.7.2 to your environment variable"
puts stderr "\tDirectory: $root"
}

module-whatis	"adds python to your environment variable"

prereq python/3.7.0
prereq pytorch/1.1.0

set            app              fairseq
set            version          0.7.2
set            root             /home/dataset/packages/pytorch/fairseq/0.7.2
prepend-path   PATH             $root/bin
prepend-path   LD_RUN_PATH      $root/lib
prepend-path   LD_LIBRARY_PATH  $root/lib
prepend-path   PYTHONPATH       $root/lib/python3.7/site-packages

# append-path -d " " CPPFLAGS -I$root/include
# append-path -d " " LDFLAGS -L$root/lib
